<script>
    window.typeWriterEffect = (text, speed = 120) => {
        const el = document.getElementById('typewriter-text');
        const caret = document.querySelector('.typewriter-caret');
        if (!el) return;
        el.textContent = '';
        if (caret) caret.classList.remove('hide-caret');
        let i = 0;
        function type() {
            if (i < text.length) {
                el.textContent += text.charAt(i);
                i++;
                setTimeout(type, speed);
            }
        }
        type();
        // Hide caret after x seconds
        if (caret) {
            setTimeout(() => {
                caret.classList.add('hide-caret');
            }, 3000);
        }
    };
</script>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("typeWriterEffect", "We Are ALPHA");
        }
    }
}
