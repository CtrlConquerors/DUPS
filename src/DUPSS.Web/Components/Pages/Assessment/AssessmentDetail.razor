@page "/Blog/Detail/{AssessmentId}"
@using DUPSS.API.Models.DTOs
@using DUPSS.Web.Components.Service
@using Markdig
@inject AssessmentApiService AssessmentApiService
@inject NavigationManager NavigationManager

<div class="assessment-detail-container">
    @if (isLoading)
    {
        <div class="loading-indicator">
            <p>Loading assessment details...</p>
            <div class="spinner"></div>
        </div>
    }
    else if (hasError)
    {
        <div class="error-message">
            <p>Oops! Could not load assessment details. The assessment may not exist or there was a server error.</p>
            <button class="retry-button" @onclick="RetryLoadAssessment">Retry</button>
            <button class="back-button" @onclick="GoBack">Back to Assessments</button>
        </div>
    }
    else if (assessment == null)
    {
        <div class="no-assessment-message">
            <p>Assessment not found.</p>
            <button class="back-button" @onclick="GoBack">Back to Assessments</button>
        </div>
    }
    else
    {
        <div class="assessment-hero-wrapper">
            @* <div class="blog-hero-image" style="background-image: url('@blog.ImageUrl');"></div> *@
            <div class="assessment-hero-title">
                <span class="title-letters">
                    @foreach (var c in assessment.AssessmentType)
                    {
                        if (c == ' ')
                        {
                            <span class="title-letter" style="width:0.4em;display:inline-block;"> </span>
                        }
                        else
                        {
                            <span class="title-letter">@c</span>
                        }
                    }
                </span>
                <div class="assessment-hero-meta">
                    <div class="info-row">
                        <label>Topic:</label>
                        <span>@assessment.BlogTopic!.BlogTopicName</span>
                    </div>
                    <div class="info-row">
                        <label>Author:</label>
                        <span>@(assessment.Staff?.Username ?? "Unknown")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="blog-section">
            <h3>Content</h3>
            <div>@((MarkupString)Markdown.ToHtml(assessment.Content ?? "", pipeline))</div>
        </div>

        <div class="navigation-buttons">
            <button class="back-button" @onclick="GoBack">Back to Assessments</button>
        </div>
    }
</div>

<Footer />

@code {
    [Parameter]
    public string AssessmentId { get; set; } = string.Empty;

    private AssessmentDTO? assessment;
    private bool isLoading = true;
    private bool hasError = false;
    private readonly MarkdownPipeline pipeline = new MarkdownPipelineBuilder().UseAdvancedExtensions().Build();

    protected override async Task OnInitializedAsync()
    {
        await LoadAssessmentAsync();
    }

    private async Task LoadAssessmentAsync()
    {
        isLoading = true;
        hasError = false;
        try
        {
            Console.WriteLine($"Loading assessment details for AssessmentId: {AssessmentId}");
            assessment = await AssessmentApiService.GetByIdAsync(AssessmentId);
            if (assessment == null)
            {
                Console.WriteLine($"Assessment not found for AssessmentId: {AssessmentId}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading assessment detail: {ex.Message}");
            hasError = true;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RetryLoadAssessment()
    {
        await LoadAssessmentAsync();
    }

    private void GoBack()
    {
        Console.WriteLine("Navigating back to /assessment");
        NavigationManager.NavigateTo("/assessment", forceLoad: true);
    }
}