@* Collapsible Side Navigation for Management *@
<div class="d-flex">
    <!-- Sidebar -->
    <nav class="nav flex-column bg-light sidebar @(isCollapsed ? "collapsed" : "")">
        <div class="sidebar-toggle-wrapper">
        <button class="btn btn-outline-secondary mb-3 toggle-btn" @onclick="ToggleSidebar" aria-label="Toggle sidebar">
            <i class="bi bi-list" style="font-size: 1.5rem;"></i>
        </button>
        </div>
        <NavLink href="/Management/Dashboard" class="nav-link">
            <i class="bi bi-speedometer2"></i>
            <span class="nav-label">Dashboard</span>
        </NavLink>
        <NavLink href="/Management/Blog" class="nav-link">
            <i class="bi bi-journal-text"></i>
            <span class="nav-label">Blog Management</span>
        </NavLink>
        <NavLink href="/Management/User" class="nav-link">
            <i class="bi bi-people"></i>
            <span class="nav-label">User Management</span>
        </NavLink>
        <NavLink href="/Management/Campaign" class="nav-link">
            <i class="bi bi-bullseye"></i>
            <span class="nav-label">Campaign Management</span>
        </NavLink>
        <NavLink href="/Management/Course" class="nav-link">
            <i class="bi bi-mortarboard"></i>
            <span class="nav-label">Course Management</span>
        </NavLink>
        <NavLink href="/Management/Appointment" class="nav-link">
            <i class="bi bi-calendar-check"></i>
            <span class="nav-label">Appointment Management</span>
        </NavLink>
        <NavLink href="/Management/CourseEnroll" class="nav-link">
            <i class="bi bi-person-plus"></i>
            <span class="nav-label">Course Enroll Management</span>
        </NavLink>
        @* <NavLink href="/Management/Assessment" class="nav-link"> *@
        @*     <i class="bi bi-person-plus"></i> *@
        @*     <span class="nav-label">Assessment Management</span> *@
        @* </NavLink> *@
        
        <NavLink href="/" class="nav-link">
            <i class="bi bi-house-door"></i>
            <span class="nav-label">Back to Home</span>
        </NavLink>
        <!-- Add more links as needed -->
    </nav>
    <div class="flex-grow-1 p-3">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    private bool isCollapsed = true;

    private void ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
    }
    
}